<body>
   

    <div class="container currentMovieContainer">
        <div class="row justify-content-center">
            <div class="col-8">
                <h2 class="currentMovieTitle">{{movie.title}}</h2>
                <p>{{movie.year}}</p>
                <p>{{movie.rating}}</p>
                <p>{{movie.genre}}</p>
                <p>{{movie.director}}</p>
                <p>{{movie.plot}}</p>
    <input type="hidden" id="movie-id" name="movieID" value="{{movie.id}}">
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                <form>
                    <div class="form-group">
                        <label id="reviewLabel" for="new_review">Add a Review</label>
                        <textarea class="form-control" id="new_review" rows="3"></textarea>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Submit" id="add-review">
                </form>

            </div>
        </div>
    </div>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                {{#each reviews as | review | }}
                {{review.review_text}}
                {{review.date_created}}
                {{review.user.userName}}
                {{/each}}
            </div>
        </div>
    </div>

    <script src="../public/js/review.js"></script>